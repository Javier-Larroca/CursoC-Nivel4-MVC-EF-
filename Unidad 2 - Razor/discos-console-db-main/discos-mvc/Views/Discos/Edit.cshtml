@model dominio.Disco

@{
    ViewData["Title"] = "Edición";
}

<h1>Edición</h1>

<h4>Disco</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaLanzamiento" class="control-label"></label>
                        <input asp-for="FechaLanzamiento" class="form-control" type="date" />
                        <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CantidadCanciones" class="control-label"></label>
                        <input asp-for="CantidadCanciones" class="form-control" />
                        <span asp-validation-for="CantidadCanciones" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlTapa" class="control-label"></label>
                        <input asp-for="UrlTapa" class="form-control" />
                        <span asp-validation-for="UrlTapa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo</label>
                        <select class="form-select" asp-for="Estilo.Id" asp-items="ViewBag.Estilos"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Debilidad</label>
                        <select class="form-select" asp-for="TipoEdicion.Id" asp-items="ViewBag.Tipos"></select>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <img id="previewImg" src="@Model.UrlTapa" class="img-fluid" alt="Vista previa de la tapa" />
    </div>
</div>
<p>
<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const input = document.getElementById("UrlTapa");
                const preview = document.getElementById("previewImg");

                input.addEventListener("input", function () {
                    preview.src = input.value || "";
                });
            });
        </script>
}
